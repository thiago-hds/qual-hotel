<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center"> <%= hotel? 'Editar' : 'Novo' %> Hotel</h1>
    <div class="col-6 offset-3">
        <form action="/hotels/<%= hotel? `${hotel._id}?_method=PUT` : '' %> " method="POST">
            <div class="mb-3">
                <label class="form-label" for="name">Nome</label>
                <input class="form-control" type="text" id="name" name="hotel[name]" value='<%= hotel?.name %>'>
            </div>
            <div class="mb-3">
                <label class="form-label" for="location">Local</label>
                <input class="form-control" type="text" id="location" name="hotel[location]"
                    value='<%= hotel?.location %>'>
            </div>
            <div class="mb-3">
                <label class="form-label" for="price">Preço</label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">R$</span>
                    <input type="text" class="form-control" id="price" name="hotel[price]" placeholder="0"
                        aria-label="price" aria-describedby="price-label">
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="image">Imagem</label>
                <input class="form-control" type="text" id="image" name="hotel[image]" value='<%= hotel?.image %>'>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Descrição</label>
                <textarea class="form-control" type="text" id="description" name="hotel[description]">
                    <%= hotel?.description %>
                </textarea>
            </div>
            <div class="mb-3">
                <a class="btn btn-danger" href="/hotels">Cancelar</a>
                <button class="btn btn-success">Salvar</button>
            </div>
        </form>
    </div>

</div>