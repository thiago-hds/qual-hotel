<% layout('layouts/boilerplate') %>

<div class="row">
    <div class="col-6 offset-3">
        <main class="card mb-3">
            <img src="<%= hotel.image %>" class="card-img-top" alt="...">
            <section class="card-body">
                <h5 class="card-title"><%= hotel.name %></h5>
                <p class="card-text">
                    <%= hotel.description %>
                </p>
            </section>
            <section class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= hotel.location %></li>
                <li class="list-group-item"> R$<%= hotel.price.toFixed(2) %> por noite</li>
            </section>
            <section class="card-body">
                <a class="btn btn-info" href="/hotels/<%= hotel._id %>/edit">Editar</a>
                <form class="d-inline" action="/hotels/<%= hotel._id %>?_method=DELETE" method="POST">
                    <button class="btn btn-danger">Excluir</button>
                </form>
            </section>
        </main>
        <form class="mb-3" action="" method="POST">
            <h2>Avalie esse hotel</h2>
            <div class="mb-3">
                <label class="form-label" for="rating">Nota</label>
                <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
            </div>
            <div class="mb-3">
                <label class="form-label" for="text">Texto</label>
                <textarea class="form-control" name="review[text]" id="text" rows="3"></textarea>
            </div>
            <button class="btn btn-success">Enviar</button>
        </form>
    </div>
</div>